{
  "name": "buttercup-desktop",
  "productName": "Buttercup",
  "version": "1.17.3",
  "description": "Free and Open Source password vault",
  "main": "app/dist/app.js",
  "scripts": {
    "clean": "rimraf ./app/node_modules",
    "format": "prettier --write '{src,config,test,locales}/**/*.{js,json}'",
    "precommit": "lint-staged",
    "test": "npm run test:unit && npm run test:gui && npm run lint",
    "test:gui": "cross-env NODE_ENV=test ava test/gui/**",
    "test:unit": "cross-env NODE_ENV=test ava test/unit/**",
    "lint": "eslint ./src ./config",
    "build:main": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.electron --progress --color",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.development --progress --color",
    "build": "npm run build:main && npm run build:renderer",
    "prestart": "npm run clean",
    "start": "concurrently --kill-others \"npm run start:renderer\" \"npm run start:main\"",
    "prestart:renderer": "npm run clean",
    "start:renderer": "webpack-dev-server --config ./config/webpack.config.development --progress --colors",
    "prestart:main": "npm run clean",
    "start:main": "cross-env HOT=1 BABEL_ENV=node NODE_ENV=development electron -r ts-node/register ./src/entries/main",
    "prerelease": "npm run clean",
    "release": "npm run build && npm run package",
    "package:linux": "electron-builder --linux --ia32 --x64",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win --x64 --ia32",
    "package": "electron-builder --mac --win --linux --x64 --ia32 -p always",
    "package:current": "build",
    "postinstall": "opencollective postinstall",
    "i18next-parse-lang": "i18next-scanner --config ./config/i18next-scanner.config.js 'src/**/*.{js,jsx}'"
  },
  "lint-staged": {
    "{src,config,test,locales}/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "build": {
    "asar": true,
    "appId": "pw.buttercup.desktop",
    "copyright": "Copyright Â© 2015-2018 MadDev Oy",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "background": "./build/background@2x.png",
      "contents": [
        {
          "x": 396,
          "y": 345,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 396,
          "y": 110,
          "type": "file"
        }
      ],
      "window": {
        "width": 660,
        "height": 480
      }
    },
    "nsis": {
      "perMachine": true
    },
    "win": {
      "target": "nsis",
      "publisherName": "MadDev Oy"
    },
    "linux": {
      "target": [
        "rpm",
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "synopsis": "Free and Open Source Password Vault"
    },
    "fileAssociations": {
      "ext": "bcup",
      "name": "Buttercup Archive",
      "icon": "./build/icon.icns"
    },
    "directories": {
      "output": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buttercup/buttercup-desktop.git"
  },
  "keywords": [
    "password",
    "vault",
    "manager",
    "credentials"
  ],
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "sources": [
      "src/**/*.{js,jsx}"
    ],
    "modules": false,
    "concurrency": 5,
    "failFast": true,
    "powerAssert": true,
    "require": [
      "@babel/register"
    ]
  },
  "author": "Buttercup <info@buttercup.pw>",
  "contributors": [
    {
      "name": "Perry Mitchell",
      "email": "perry@perrymitchell.net"
    },
    {
      "name": "Sallar Kaboli",
      "email": "sallar.kaboli@gmail.com"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/buttercup/buttercup-desktop/issues"
  },
  "homepage": "https://buttercup.pw",
  "dependencies": {
    "opencollective": "^1.0.3"
  },
  "devDependencies": {
    "@buttercup/channel-queue": "^0.4.0",
    "@buttercup/dropbox-client": "^0.4.0",
    "@buttercup/exporter": "^0.1.0",
    "@buttercup/file-interface": "^0.3.2",
    "@buttercup/google-oauth2-client": "^0.2.1",
    "@buttercup/googledrive-client": "^0.8.0",
    "@buttercup/iconographer": "^1.2.0",
    "@buttercup/importer": "^1.1.0",
    "@buttercup/secure-file-host": "^0.2.1",
    "@buttercup/ui": "^2.2.0",
    "@types/node": "^12.12.12",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "@types/webpack-env": "^1.14.1",
    "cross-env": "^6.0.3",
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0",
    "fork-ts-checker-webpack-plugin": "^3.1.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/buttercup",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  }
}
